@model List<DiaryEntry>
@{
}
<h1>Hello! Welcome to the Diary Index!</h1>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <a class="btn btn-primary" asp-action="Create">
                <h4><img src="~/images/journal-plus.svg" width="25" height="25" style="position: relative; bottom: 2px"  /> Create New Diary Entry</h4>
            </a>
        </div>
        <div class="col-6 text-end">
            <h2>Diary Entries</h2>
        </div>

    </div>

</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th>Tags</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var entry in Model)
            {
                <tr>
                    <td>@entry.Title</td>
                    <td>@entry.Content</td>
                    <td>@entry.Created</td>
                    <td>@string.Join(", ", entry.Tags)</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@entry.Id"><img src="~/images/pencil-square.svg" />Edit</a>
                        <a href="@Url.Action("Delete", new { id = @entry.Id })" class="btn btn-danger" onclick="return confirm ('Are you sure want to delete this Diary Entry?');"><img src="~/images/trash3-fill.svg" />Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>